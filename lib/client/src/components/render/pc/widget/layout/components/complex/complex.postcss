.theme-style {
    color: #fff;
    opacity: 0.86;
    font-weight: normal;
}
.header-slot-wrapper {
    height: 100%;
    width: 100%;
    display: flex;
    align-items: center;
}
.component-wrapper .theme-desc {
    @extend .theme-style;
}
.message-box.theme-header {
    &:hover {
        opacity: 1;
    }
    @extend .theme-style;
}
.complex-top-menu-wraper{
    border-top: 1px  solid transparent;
    border-bottom: 1px  solid transparent;
    &:hover{
        border-top: 1px dashed #3a84ff;
        border-bottom: 1px dashed #3a84ff;
    }
    &:global(.selected) {
        border-top: 1px solid #3a84ff;
        border-bottom: 1px solid #3a84ff;
    }
    .theme-desc {
        color: #fff;
    }
    :global(.navigation-header-item){
        white-space: nowrap;
        color: var(--color) !important;
        &:hover {
            color: var(--hover-color) !important;
        }
    }
}
:global(.nav-slider-list) {
    width: 100%;
}
.white-theme {
    .theme-desc {
        color: #313238;
    }
    .message-box.theme-header {
        color: #63656E;
    }
}
