.interactive {
    position: fixed;
    z-index: 99999999;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    pointer-events: auto !important;
    :global(.lesscode-bk-sideslider-wrapper) {
        right: 0;
    }
    > div {
        width: auto !important;
        height: auto !important;
    }
}

.hidden {
    display: none;
}
